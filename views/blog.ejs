<%- include('includes/header') %>
<link rel="stylesheet" href="../../index.css">
</html>
<body>
<%- include('includes/navbar') %>

    <h2> <%= blogPost === 0 ? 'No hay nigún artículo': 'Todos los artículos' %></h2>

    <div class="articles">
        <% if (blogPost > 0) { %>
            <% blogPost.forEach(articulo => { %>
                <div>
                <h2><a href="/admin/blog/id=<%= articulo.id %>"> <%= articulo.titulo %> </a></h2>
                <p> <%= articulo.autor %> </p>
                <p><%= articulo.editado ? "Editado": "" %></p>
                <p> <%= articulo.fecha %> <%= articulo.hora %> </p>
                <img src="<%= articulo.imagen %> " width="250px" height="250px">
                <p> <%= articulo.cuerpo %> </p>
                </div>
            <% }); %>
        <% } %>

        
    </div>

<%- include('includes/footer') %>